{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Factom on-chain vote initiation schema",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "vote",
        "proposal"
    ],
    "properties": {
        "proposal": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "title"
            ],
            "anyOf": [
                {
                    "required": [
                        "text"
                    ]
                },
                {
                    "required": [
                        "externalRef"
                    ]
                }
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "externalRef": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "href",
                        "hash"
                    ],
                    "properties": {
                        "href": {
                            "type": "string",
                            "format": "uri"
                        },
                        "hash": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "value",
                                "algo"
                            ],
                            "properties": {
                                "value": {
                                    "type": "string"
                                },
                                "algo": {
                                    "enum": [
                                        "sha1",
                                        "sha256",
                                        "sha512"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "vote": {
            "type": "object"
        }
    }
}